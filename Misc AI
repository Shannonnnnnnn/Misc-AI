-- Create a ScreenGui to hold the GUI elements
local gui = Instance.new("ScreenGui")
gui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Create a Frame as part of the GUI
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 200, 0, 300)
frame.Position = UDim2.new(0.5, -100, 0.5, -150)
frame.BackgroundTransparency = 0.3 -- 30% transparent
frame.BackgroundColor3 = Color3.new(1, 0, 0) -- Red
frame.BorderSizePixel = 2
frame.Parent = gui

-- Create a label for the GUI title
local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(1, 0, 0, 30)
titleLabel.Position = UDim2.new(0, 0, 0, 0)
titleLabel.BackgroundTransparency = 1
titleLabel.Text = "Misc AI"
titleLabel.Font = Enum.Font.SourceSansBold
titleLabel.TextSize = 20
titleLabel.TextColor3 = Color3.new(1, 1, 1) -- White text color
titleLabel.Parent = frame

-- Labels and default text
local labels = {"Walkspeed", "Jump Power", "FOV", "Gravity"}

-- Create four Textboxes and Labels within the frame
for i = 1, 4 do
    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(0.5, -10, 0, 30)
    label.Position = UDim2.new(0, 5, 0, 40 + (i - 1) * 60)
    label.BackgroundTransparency = 1
    label.Text = labels[i]
    label.TextColor3 = Color3.new(1, 1, 1) -- White text color
    label.Parent = frame

    local textbox = Instance.new("TextBox")
    textbox.Size = UDim2.new(0.5, -10, 0, 30)
    textbox.Position = UDim2.new(0.5, 5, 0, 40 + (i - 1) * 60)
    textbox.BackgroundColor3 = Color3.new(0.9, 0.9, 0.9) -- Light gray

    -- Set default text for the textboxes
    if i == 1 then
        textbox.Text = labels[i]
    elseif i == 2 then
        textbox.Text = labels[i] -- Display "Jump Power" in the second textbox
    elseif i == 3 then
        textbox.Text = labels[i] -- Display "FOV" in the third textbox
    elseif i == 4 then
        textbox.Text = labels[i] -- Display "Gravity" in the fourth textbox
    else
        textbox.Text = "Default value"
    end

    textbox.Parent = frame

    -- Add functionality to the textboxes
    if i == 1 then
        textbox.FocusLost:Connect(function()
            local value = tonumber(textbox.Text)
            if value then
                game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = value
            end
        end)
    elseif i == 2 then
        textbox.FocusLost:Connect(function()
            local value = tonumber(textbox.Text)
            if value then
                game.Players.LocalPlayer.Character.Humanoid.JumpPower = value
            end
        end)
    elseif i == 3 then
        textbox.FocusLost:Connect(function()
            local value = tonumber(textbox.Text)
            if value then
                game.Workspace.CurrentCamera.FieldOfView = value
            end
        end)
    elseif i == 4 then
        textbox.FocusLost:Connect(function()
            local value = tonumber(textbox.Text)
            if value then
                game.Workspace.Gravity = value
            end
        end)
    end
end

-- Create a Close button
local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0, 100, 0, 30)
closeButton.Position = UDim2.new(0.5, -50, 1, -40)
closeButton.BackgroundColor3 = Color3.new(0.9, 0.9, 0.9) -- Light gray
closeButton.Text = "Close"
closeButton.Parent = frame

-- Add functionality to the Close button
closeButton.MouseButton1Click:Connect(function()
    gui:Destroy()
end)
